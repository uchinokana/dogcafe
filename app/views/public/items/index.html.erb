          <div class="container">
            <div class="row">
             
            
              <div class="col-xs-1"></div>
              
                <div class="col-xs-9">
                  <br>
                  <h2>
                    キャスト紹介
                  </h2>
                        <div class="row">
                          <% @items.each do |item| %>
                            <div class="box" style="float:left; margin-right:20px;">
                              <% if item.image.attached? %>
                                <%= image_tag item.image, size: "200x200" %>
                              <% else %>
                                <%= image_tag 'no_image', size: "200x200" %>
                              <% end %>
                            </div>
                            
                            <p>
                              <%= link_to public_item_path(item.id) do %>
                                <%= item.name %>
                              <% end %>
                            </p>
                            
                            <p>¥<%= (item.price*1.1).floor %></p>
                          <% end %>
                          
                        </div>
              
              </div>
              
            </div>
          </div>