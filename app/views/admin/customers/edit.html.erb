<h4>admin customers edit</h4>
<div class="container">
  <div class="row">
    <h3 class="page-name">
      <strong>
        <%= @customer.first_name %><%= @customer.last_name %>
      </strong>
        さんの
      <strong>
        会員詳細
      </strong>
    </h3>
  </div>

  <div class="row">
    <div class="col-lg-10">
      <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
      <table>
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= f.text_field :first_name , class: 'form-control first_name' %></td>
          <td><%= f.text_field :last_name , class: 'form-control last_name' %></td>
          </td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= f.text_field :first_name_kana , class: 'form-control first_name_kana' %></td>
          <td><%= f.text_field :last_name_kana , class: 'form-control last_name_kana' %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= f.text_field :postal_code , class: 'form-control postal_code' %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= f.text_field :address , class: 'form-control address' %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= f.text_field :telephone_number , class: 'form-control ' %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.email_field :email , class: 'form-control email' %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td class="td-statu">
            <%= f.radio_button :is_deleted, true %><label for="customer_is_deleted">有効</label>
            <%= f.radio_button :is_deleted, false %><label for="customer_is_deleted">退会</label>
          </td>
        </tr>
        <tr>
          <th></th>
          <td><%= f.submit'変更を保存' , class: 'btn btn-success' %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>